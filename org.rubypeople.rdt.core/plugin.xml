<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="org.rubypeople.rdt.core"
   name="%Plugin.name"
   version="0.3.0"
   provider-name="RubyPeople, Inc."
   class="org.rubypeople.rdt.internal.core.RubyPlugin">

   <runtime>
      <library name="rdtcore.jar">
         <export name="*"/>
      </library>
      <library name="lib/jakarta-regexp-1.2.jar"/>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.apache.xerces"/>
      <import plugin="org.eclipse.team.core"/>
   </requires>


   <extension
         id="rubynature"
         name="%NatureRuby.name"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.rubypeople.rdt.core.RubyProject">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.team.core.fileTypes">
      <fileTypes
            type="text"
            extension="rb">
      </fileTypes>
   </extension>

</plugin>
