<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.epic.regexp"
   name="Regexp Plug-in"
   version="0.1.3"
   provider-name="Epic Project"
   class="org.epic.regexp.RegExpPlugin">

   <runtime>
      <library name="regexp.jar">
         <export name="*"/>
      </library>
      <library name="gnu-regexp-1.1.4.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
   </requires>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="RegExp"
            icon="icons/rx.gif"
            category="org.rubypeople.rdt.ui.ruby"
            class="org.epic.regexp.views.RegExpView"
            id="org.epic.regexp.views.RegExpView">
      </view>
   </extension>
     
  <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.rubypeople.rdt.ui.PerspectiveRuby">
         <viewShortcut id="org.epic.regexp.views.RegExpView"/> 
         <view
               relative="org.eclipse.ui.console.ConsoleView"
               relationship="stack"
               id="org.epic.regexp.views.RegExpView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
