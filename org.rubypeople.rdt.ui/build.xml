<?xml version="1.0" encoding="UTF-8"?>
<project name="org.rubypeople.rdt.ui" default="build.jars" basedir=".">

	<property name="bootclasspath" value=""/>
	<property name="ws" value="win32"/>
	<property name="os" value="win32"/>
	<property name="arch" value="x86"/>

	<target name="init" depends="properties">
		<property name="plugin" value="org.rubypeople.rdt.ui"/>
		<property name="version.suffix" value="_0.2.0"/>
		<property name="full.name" value="${plugin}${version.suffix}"/>
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
		<property name="build.result.folder" value="${basedir}"/>
	</target>

	<target name="properties" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>
	</target>

	<target name="build.update.jar" depends="init">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<zip zipfile="${plugin.destination}/${full.name}.jar" basedir="${temp.folder}/${full.name}" filesonly="false"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/${full.name}"/>
		<copy file="${build.result.folder}/rdtui.jar" todir="${destination.temp.folder}/${full.name}"/>
		<copy todir="${destination.temp.folder}/${full.name}">
			<fileset dir="${basedir}" includes="${auto.includes},plugin.properties,plugin.xml,icons/**/*"/>
		</copy>
	</target>

	<target name="rdtui.jar" depends="init" unless="rdtui.jar">
		<property name="destdir" value="${temp.folder}/rdtui.jar.bin"/>
		<delete dir="${temp.folder}/rdtui.jar.bin"/>
		<mkdir dir="${temp.folder}/rdtui.jar.bin"/>
		<!-- compile the source code -->
		<javac destdir="${temp.folder}/rdtui.jar.bin" failonerror="false" verbose="true" debug="on" includeAntRuntime="no" bootclasspath="${bootclasspath}" classpath="../org.eclipse.core.resources/resources.jar;../org.eclipse.ui.workbench.texteditor/texteditor.jar;../org.eclipse.ui.win32/workbenchwin32.jar;../org.eclipse.text/bin;../org.eclipse.debug.ui/dtui.jar;../org.eclipse.ui/ui.jar;../org.eclipse.core.boot/bin;../org.eclipse.core.runtime/runtime.jar;../org.eclipse.core.resources/bin;../org.eclipse.debug.ui/bin;../org.eclipse.swt.win32/ws/${ws}/swt.jar;../org.eclipse.ui.editors/editors.jar;../org.eclipse.text/text.jar;../org.rubypeople.eclipse.shams/bin;../org.eclipse.swt/ws/${ws}/swt.jar;../org.eclipse.jface.text/jfacetext.jar;../org.eclipse.ui/bin;../org.eclipse.ui.win32/ui.jar;../org.junit/junit.jar;../org.eclipse.jface.text/bin;../org.rubypeople.eclipse.shams/rdteclipseshams.jar;../org.eclipse.ui.workbench.texteditor/bin;../org.rubypeople.rdt.core/bin;../org.eclipse.core.runtime/bin;../org.eclipse.ui.workbench/workbench.jar;../org.eclipse.jface/bin;../org.eclipse.ui.views/views.jar;../org.junit/bin;../org.eclipse.swt/bin;../org.eclipse.ui.views/bin;../org.eclipse.core.boot/boot.jar;../org.eclipse.ui.workbench/bin;../org.eclipse.core.resources.win32/resources.jar;../org.rubypeople.rdt.core/rdtcore.jar;../org.eclipse.ui.editors/bin;../org.eclipse.jface/jface.jar">
			<src path="src/"/>
		</javac>
		<!-- copy necessary resources -->
		<copy todir="${temp.folder}/rdtui.jar.bin">
			<fileset dir="src/" excludes="**/*.java"/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar jarfile="${build.result.folder}/rdtui.jar" basedir="${temp.folder}/rdtui.jar.bin"/>
		<delete dir="${temp.folder}/rdtui.jar.bin"/>
	</target>

	<target name="rdtuisrc.zip" depends="init" unless="rdtuisrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip zipfile="${build.result.folder}/rdtuisrc.zip" filesonly="false">
			<fileset dir="src/" includes="**/*.java"/>
		</zip>
	</target>

	<target name="build.jars" depends="init">
		<available property="rdtui.jar" file="${build.result.folder}/rdtui.jar"/>
		<antcall target="rdtui.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="rdtuisrc.zip" file="${build.result.folder}/rdtuisrc.zip"/>
		<antcall target="rdtuisrc.zip"/>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/${full.name}"/>
		<copy file="${build.result.folder}/rdtuisrc.zip" todir="${destination.temp.folder}/${full.name}"/>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/${full.name}"/>
		<copy file="${temp.folder}/rdtui.jar.bin.log" todir="${destination.temp.folder}/${full.name}"/>
	</target>

	<target name="clean" depends="init">
		<delete file="${build.result.folder}/rdtui.jar"/>
		<delete file="${build.result.folder}/rdtuisrc.zip"/>
		<delete file="${plugin.destination}/${full.name}.jar"/>
		<delete file="${plugin.destination}/${full.name}.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running">
		<eclipse.refreshLocal resource="${plugin}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"/>
		</delete>
		<zip zipfile="${plugin.destination}/${full.name}.zip" basedir="${temp.folder}" filesonly="true"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
